begin 
read position 

size(paLista)
size = 0
daca elementul head este ultimul
    returneaza 1;
altfel
    size = 1;
    size += size(tail(paLista));
returneaza size;

size(paNod,position)
size = 0
daca position == 1
    returneaza 1;
altfel
    size = 1;
    size += size(paNod.next, position-1);
returneaza size;

size(pointer)
size = 0
daca pointer == NULL
    returneaza size
daca pointer.next == NULL
    size = 1
altfel
    size = 1
    size += size(pointer->next)
returneaza size